<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >

        <ImageView
            android:id="@+id/product_seller_image"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_seller_image"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:id="@+id/seller_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:text="Product Name"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                />


            <TextView
                android:id="@+id/product_seller_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seller_product_name"
                android:text="Product Description"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/holo_blue_light"
                />

            <TextView
                android:id="@+id/product_seller_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seller_product_state"
                android:layout_alignParentLeft="true"
                android:text="Product Price"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/blue_grey"
                />

            <TextView
                android:id="@+id/seller_product_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Product State"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/blue_grey"
                />


        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>