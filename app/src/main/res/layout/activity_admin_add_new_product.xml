<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Admin.AdminAddNewProductActivity">

    <RelativeLayout
        android:id="@+id/r1456"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/admin_new_product_back_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_back"
            android:background="@color/colorPrimary"
            android:padding="9dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/admin_add_new_products_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add New Products"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/admn_select_product_image"
        android:layout_width="320dp"
        android:layout_height="230dp"
        android:cropToPadding="false"
        android:layout_marginLeft="22dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/upload"
        android:layout_below="@+id/r1456"
        android:layout_marginTop="30dp"
        />

        <EditText
            android:id="@+id/admn_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admn_select_product_image"
            android:inputType="text|textCapWords"
            android:maxLength="20"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:hint="Crop Name.."
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/inputtext"
            />

        <EditText
            android:id="@+id/admn_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admn_product_name"
            android:inputType="text|textCapSentences"
            android:maxLength="30"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:hint="Crop Description"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/inputtext"
            />

        <EditText
            android:id="@+id/admn_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admn_product_description"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:hint="Cost"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/inputtext"
            />


        <Button
            android:id="@+id/admn_add_new_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/admn_product_price"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/buttons"
            android:text="Post Crop"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="20dp"
            />

 </RelativeLayout>