<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <RelativeLayout
        android:id="@+id/r14568"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/aboutus_back_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_back"
            android:background="@color/colorPrimary"
            android:padding="9dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/aboutus_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="About Us"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

        <ImageView
        android:id="@+id/aboutus_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_above="@+id/aboutus_grocery"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/aboutus_grocery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/aboutus_slogan"
        android:textColor="@color/color_black_light"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/aboutus_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/slogan"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/aboutus_slogan"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/openshop" />

</RelativeLayout>