<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#365A51"
    tools:context=".Sellers.SellerRegistrationActivity">


    <RelativeLayout
        android:id="@+id/r_main1"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circular_round_border"
        >

        <TextView
            android:id="@+id/title_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Farmer Registration Form"
            android:gravity="center"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_name_tyl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_seller"
            android:textColorHint="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_seller"
                android:padding="20dp"
                android:hint="Name"
                android:maxLength="20"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_phone_tyl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_name_tyl"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@android:color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:hint="Phone Number"
                android:maxLength="10"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_email_tyl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_phone_tyl"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@android:color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputtext"
                android:padding="20dp"
                android:hint="Email Address"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_password_tyl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_email_tyl"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@android:color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:hint="Password"
                android:maxLength="10"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seller_address_tyl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_password_tyl"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@android:color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/seller_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:hint="Address"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/seller_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/seller_address_tyl"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/buttons"
            android:text="@string/register"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            />

    </RelativeLayout>
</RelativeLayout>
