<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCheckNewProductsActivity">

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/admin_check_new_product_back_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_back"
            android:background="@color/colorPrimary"
            android:padding="9dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/approve_products_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Approve New Products"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_products_checklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/r3"
        >
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>